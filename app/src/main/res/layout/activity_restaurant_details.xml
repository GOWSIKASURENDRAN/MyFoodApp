<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/restaurant_details_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RestaurantDetailsActivity">

    <!-- Top Image Banner with Overlay -->
    <FrameLayout
        android:id="@+id/restaurant_banner"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Restaurant Image -->
        <ImageView
            android:id="@+id/iv_restaurant_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/ic_food_category"
            android:contentDescription="@string/restaurant_image"
            android:scaleType="centerCrop" />

        <!-- Gradient Overlay for Text Readability -->
        <View
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:background="@drawable/gradient_overlay" />

        <!-- Back Arrow Button -->
        <ImageView
            android:id="@+id/iv_back_arrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/circle_background"
            android:contentDescription="@string/back_button"
            android:padding="8dp"
            android:src="@drawable/ic_back_arrow"
            android:tint="@color/white" />

        <!-- Favorite Button -->
        <ImageView
            android:id="@+id/iv_favorite"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_gravity="end"
            android:background="@drawable/circle_background"
            android:contentDescription="@string/favorite_button"
            android:padding="8dp"
            android:src="@drawable/ic_favorite"
            android:tint="@color/white" />

    </FrameLayout>

    <!-- Restaurant Details Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/restaurant_details_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="-20dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/restaurant_banner">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Restaurant Name -->
            <TextView
                android:id="@+id/tv_restaurant_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-bold"
                android:text="@string/restaurant_name"
                android:textColor="@color/dark_gray"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Rating and Delivery Time Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                                            android:text="@string/star_rating"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="sans-serif"
                                            android:text="@string/bullet_point"
                    android:textColor="@color/medium_gray"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_delivery_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:fontFamily="sans-serif"
                    android:text="@string/delivery_time"
                    android:textColor="@color/medium_gray"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Cuisine Type -->
            <TextView
                android:id="@+id/tv_cuisine_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif"
                android:text="@string/cuisine_type"
                android:textColor="@color/medium_gray"
                android:textSize="14sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Tabs Section -->
    <LinearLayout
        android:id="@+id/tabs_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/restaurant_details_card">

        <!-- Tab Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <!-- Menu Tab (Selected) -->
            <TextView
                android:id="@+id/tab_menu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/menu"
                android:textColor="@color/brand_green"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- Info Tab -->
            <TextView
                android:id="@+id/tab_info"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/info"
                android:textColor="@color/medium_gray"
                android:textSize="14sp" />

            <!-- Reviews Tab -->
            <TextView
                android:id="@+id/tab_reviews"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:padding="16dp"
                android:text="@string/reviews"
                android:textColor="@color/medium_gray"
                android:textSize="14sp" />

        </LinearLayout>

        <!-- Tab Indicator Line -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/divider_color" />

    </LinearLayout>

    <!-- Category Chips Scroll -->
    <HorizontalScrollView
        android:id="@+id/categories_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/tabs_container">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp">

            <!-- Recommended Category (Selected) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:background="@drawable/category_chip_selected"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="@string/recommended"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <!-- Pizza Category -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:background="@drawable/category_chip_normal"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="@string/category_pizza"
                android:textColor="@color/dark_gray"
                android:textSize="14sp" />

            <!-- Drinks Category -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:background="@drawable/category_chip_normal"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="@string/category_drinks"
                android:textColor="@color/dark_gray"
                android:textSize="14sp" />

            <!-- Desserts Category -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:background="@drawable/category_chip_normal"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="16dp"
                android:paddingVertical="8dp"
                android:text="@string/category_desserts"
                android:textColor="@color/dark_gray"
                android:textSize="14sp" />

        </LinearLayout>

    </HorizontalScrollView>

    <!-- Food Items List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_food_items"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="80dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_cart_summary"
        app:layout_constraintTop_toBottomOf="@id/categories_scroll" />

    <!-- Bottom Cart Summary -->
    <LinearLayout
        android:id="@+id/bottom_cart_summary"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:elevation="8dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Items Count and Total -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_items_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="@string/items_count"
                android:textColor="@color/dark_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-bold"
                android:text="@string/total_price"
                android:textColor="@color/dark_gray"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- View Cart Button -->
        <Button
            android:id="@+id/btn_view_cart"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/button_primary"
            android:fontFamily="sans-serif-medium"
            android:text="@string/view_cart"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
