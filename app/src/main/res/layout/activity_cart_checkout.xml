<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cart_checkout_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background"
    tools:context=".CartCheckoutActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/iv_back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/back_button"
            android:src="@drawable/ic_back_arrow"
            android:tint="@color/dark_gray" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-bold"
            android:gravity="center"
            android:text="@string/your_cart"
            android:textColor="@color/dark_gray"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Cart Icon -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/cart_icon"
            android:src="@drawable/ic_cart"
            android:tint="@color/brand_green" />

    </LinearLayout>

    <!-- Divider Line -->
    <View
        android:id="@+id/divider_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@id/top_bar" />

    <!-- Main Content Scroll -->
    <ScrollView
        android:id="@+id/main_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingBottom="120dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_section"
        app:layout_constraintTop_toBottomOf="@id/divider_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Restaurant Info Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Restaurant Name -->
                    <TextView
                        android:id="@+id/tv_restaurant_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-bold"
                        android:text="@string/restaurant_abc"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Restaurant Location and Delivery Time -->
                    <TextView
                        android:id="@+id/tv_restaurant_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/restaurant_location_delivery"
                        android:textColor="@color/medium_gray"
                        android:textSize="14sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Cart Items List -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:orientation="vertical">

                <!-- Item 1: Burger Combo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <!-- Food Image -->
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/ic_food_category"
                        android:contentDescription="@string/burger_combo_image"
                        android:scaleType="centerCrop" />

                    <!-- Food Details -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <!-- Food Name -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-bold"
                            android:text="@string/burger_combo"
                            android:textColor="@color/dark_gray"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- Food Price -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="sans-serif"
                            android:text="@string/burger_combo_price_lkr"
                            android:textColor="@color/medium_gray"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Quantity and Total -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <!-- Quantity Selector -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <!-- Minus Button -->
                            <ImageView
                                android:id="@+id/iv_minus_burger"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/button_quantity"
                                android:contentDescription="@string/decrease_quantity"
                                android:padding="6dp"
                                android:src="@drawable/ic_minus"
                                android:tint="@color/dark_gray" />

                            <!-- Quantity -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="12dp"
                                android:fontFamily="sans-serif-bold"
                                android:text="@string/quantity_two"
                                android:textColor="@color/dark_gray"
                                android:textSize="16sp" />

                            <!-- Plus Button -->
                            <ImageView
                                android:id="@+id/iv_plus_burger"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/button_quantity"
                                android:contentDescription="@string/increase_quantity"
                                android:padding="6dp"
                                android:src="@drawable/ic_plus"
                                android:tint="@color/dark_gray" />

                        </LinearLayout>

                        <!-- Total Price for Item -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif-bold"
                            android:text="@string/burger_combo_total_lkr"
                            android:textColor="@color/dark_gray"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@color/divider_color" />

                <!-- Item 2: Fries Large -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <!-- Food Image -->
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/ic_food_category"
                        android:contentDescription="@string/fries_large_image"
                        android:scaleType="centerCrop" />

                    <!-- Food Details -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <!-- Food Name -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-bold"
                            android:text="@string/fries_large"
                            android:textColor="@color/dark_gray"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- Food Price -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="sans-serif"
                            android:text="@string/fries_large_price_lkr"
                            android:textColor="@color/medium_gray"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Quantity and Total -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <!-- Quantity Selector -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <!-- Minus Button -->
                            <ImageView
                                android:id="@+id/iv_minus_fries"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/button_quantity"
                                android:contentDescription="@string/decrease_quantity"
                                android:padding="6dp"
                                android:src="@drawable/ic_minus"
                                android:tint="@color/dark_gray" />

                            <!-- Quantity -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="12dp"
                                android:fontFamily="sans-serif-bold"
                                android:text="@string/quantity_one"
                                android:textColor="@color/dark_gray"
                                android:textSize="16sp" />

                            <!-- Plus Button -->
                            <ImageView
                                android:id="@+id/iv_plus_fries"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/button_quantity"
                                android:contentDescription="@string/increase_quantity"
                                android:padding="6dp"
                                android:src="@drawable/ic_plus"
                                android:tint="@color/dark_gray" />

                        </LinearLayout>

                        <!-- Total Price for Item -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif-bold"
                            android:text="@string/fries_large_total_lkr"
                            android:textColor="@color/dark_gray"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@color/divider_color" />

                <!-- Item 3: Coke -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <!-- Food Image -->
                    <ImageView
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@drawable/ic_food_category"
                        android:contentDescription="@string/coke_image"
                        android:scaleType="centerCrop" />

                    <!-- Food Details -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <!-- Food Name -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif-bold"
                            android:text="@string/coke"
                            android:textColor="@color/dark_gray"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <!-- Food Price -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:fontFamily="sans-serif"
                            android:text="@string/coke_price_lkr"
                            android:textColor="@color/medium_gray"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <!-- Quantity and Total -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <!-- Quantity Selector -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <!-- Minus Button -->
                            <ImageView
                                android:id="@+id/iv_minus_coke"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/button_quantity"
                                android:contentDescription="@string/decrease_quantity"
                                android:padding="6dp"
                                android:src="@drawable/ic_minus"
                                android:tint="@color/dark_gray" />

                            <!-- Quantity -->
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="12dp"
                                android:fontFamily="sans-serif-bold"
                                android:text="@string/quantity_one"
                                android:textColor="@color/dark_gray"
                                android:textSize="16sp" />

                            <!-- Plus Button -->
                            <ImageView
                                android:id="@+id/iv_plus_coke"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:background="@drawable/button_quantity"
                                android:contentDescription="@string/increase_quantity"
                                android:padding="6dp"
                                android:src="@drawable/ic_plus"
                                android:tint="@color/dark_gray" />

                        </LinearLayout>

                        <!-- Total Price for Item -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:fontFamily="sans-serif-bold"
                            android:text="@string/coke_total_lkr"
                            android:textColor="@color/dark_gray"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Add More Items Button -->
            <TextView
                android:id="@+id/tv_add_more_items"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="24dp"
                android:fontFamily="sans-serif-bold"
                android:padding="12dp"
                android:text="@string/add_more_items"
                android:textColor="@color/brand_green"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Section with Price Summary and Checkout Button -->
    <LinearLayout
        android:id="@+id/bottom_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Price Summary Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Subtotal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="@string/subtotal"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/subtotal_amount_lkr"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Delivery Fee -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="@string/delivery_fee"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/delivery_fee_amount_lkr"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Taxes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="@string/taxes"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/taxes_amount_lkr"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="12dp"
                android:background="@color/divider_color" />

            <!-- Total -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingVertical="4dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-bold"
                    android:text="@string/total"
                    android:textColor="@color/dark_gray"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-bold"
                    android:text="@string/total_amount_lkr"
                    android:textColor="@color/dark_gray"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Proceed to Checkout Button -->
        <Button
            android:id="@+id/btn_proceed_checkout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_primary"
            android:fontFamily="sans-serif-bold"
            android:text="@string/proceed_to_checkout"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
