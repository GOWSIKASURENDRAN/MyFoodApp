<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cart_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".CartActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/white"
        android:elevation="2dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/iv_back_arrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="@string/back_button"
            android:src="@drawable/ic_back_arrow"
            android:tint="@color/dark_gray" />

        <!-- Title -->
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-bold"
            android:gravity="center"
            android:text="@string/your_cart"
            android:textColor="@color/dark_gray"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Spacer to center the title -->
        <View
            android:layout_width="24dp"
            android:layout_height="24dp" />

    </LinearLayout>

    <!-- Divider Line -->
    <View
        android:id="@+id/divider_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@id/top_bar" />

    <!-- Restaurant Info -->
    <LinearLayout
        android:id="@+id/restaurant_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        app:layout_constraintTop_toBottomOf="@id/divider_top">

        <!-- Restaurant Name -->
        <TextView
            android:id="@+id/tv_restaurant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-bold"
            android:text="@string/restaurant_name"
            android:textColor="@color/dark_gray"
            android:textSize="16sp"
            android:textStyle="bold" />

        <!-- Delivery Info -->
        <TextView
            android:id="@+id/tv_delivery_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif"
            android:text="@string/delivery_info"
            android:textColor="@color/medium_gray"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Item List -->
    <ScrollView
        android:id="@+id/items_scroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:paddingBottom="200dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_section"
        app:layout_constraintTop_toBottomOf="@id/restaurant_info">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp">

            <!-- Item 1: Burger Combo -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <!-- Food Image -->
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/ic_food_category"
                    android:contentDescription="@string/food_image"
                    android:scaleType="centerCrop" />

                <!-- Food Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <!-- Food Name -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-bold"
                        android:text="@string/burger_combo"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Food Price -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/burger_price"
                        android:textColor="@color/medium_gray"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Quantity Controls -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Minus Button -->
                    <Button
                        android:id="@+id/btn_minus_burger"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/button_quantity"
                        android:fontFamily="sans-serif-bold"
                        android:text="@string/minus"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />

                    <!-- Quantity -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:fontFamily="sans-serif-bold"
                        android:text="@string/quantity_two"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />

                    <!-- Plus Button -->
                    <Button
                        android:id="@+id/btn_plus_burger"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/button_quantity"
                        android:fontFamily="sans-serif-bold"
                        android:text="@string/plus"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color" />

            <!-- Item 2: Coke -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <!-- Food Image -->
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/ic_food_category"
                    android:contentDescription="@string/food_image"
                    android:scaleType="centerCrop" />

                <!-- Food Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <!-- Food Name -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-bold"
                        android:text="@string/coke"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Food Price -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/coke_price"
                        android:textColor="@color/medium_gray"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Quantity Controls -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Minus Button -->
                    <Button
                        android:id="@+id/btn_minus_coke"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/button_quantity"
                        android:fontFamily="sans-serif-bold"
                        android:text="@string/minus"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />

                    <!-- Quantity -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:fontFamily="sans-serif-bold"
                        android:text="@string/quantity_one"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />

                    <!-- Plus Button -->
                    <Button
                        android:id="@+id/btn_plus_coke"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/button_quantity"
                        android:fontFamily="sans-serif-bold"
                        android:text="@string/plus"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color" />

            <!-- Item 3: French Fries -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">

                <!-- Food Image -->
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/ic_food_category"
                    android:contentDescription="@string/food_image"
                    android:scaleType="centerCrop" />

                <!-- Food Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <!-- Food Name -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-bold"
                        android:text="@string/french_fries"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Food Price -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/fries_price"
                        android:textColor="@color/medium_gray"
                        android:textSize="14sp" />

                </LinearLayout>

                <!-- Quantity Controls -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- Minus Button -->
                    <Button
                        android:id="@+id/btn_minus_fries"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/button_quantity"
                        android:fontFamily="sans-serif-bold"
                        android:text="@string/minus"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />

                    <!-- Quantity -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:fontFamily="sans-serif-bold"
                        android:text="@string/quantity_one"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />

                    <!-- Plus Button -->
                    <Button
                        android:id="@+id/btn_plus_fries"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/button_quantity"
                        android:fontFamily="sans-serif-bold"
                        android:text="@string/plus"
                        android:textColor="@color/dark_gray"
                        android:textSize="16sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Section with Bill Summary and Checkout -->
    <LinearLayout
        android:id="@+id/bottom_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Bill Summary -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:background="@color/light_background"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Subtotal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="@string/subtotal"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/subtotal_amount"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Delivery Fee -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif"
                    android:text="@string/delivery_fee"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/delivery_fee_amount"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />

            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/divider_color" />

            <!-- Total -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-bold"
                    android:text="@string/total"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-bold"
                    android:text="@string/total_amount"
                    android:textColor="@color/dark_gray"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <!-- Checkout Button -->
        <Button
            android:id="@+id/btn_checkout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/button_primary"
            android:fontFamily="sans-serif-bold"
            android:text="@string/proceed_to_checkout"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
